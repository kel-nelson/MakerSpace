@model IEnumerable<makerspace.Models.App_User_Area_Memberships>

@{
    ViewBag.Title = "View Area Memberships";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title</h2>
    </div>
    <div class="col-md-6">
        <h3 class="pull-right">Admin Dashboard</h3>
    </div>
</div>
<p class="text-warning">
    Warning: Demo app, all logged in users have access to this dashboard.
</p>
<p>
    @Html.ActionLink("Add New", "AreaMemberships_EditDetails")
</p>
<table class="table">
    <tr>
        <th>Controls</th>
        <th>
            Member
        </th>
        <th>
            Area
        </th>
        <th>
            Membership Type
        </th>

    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "AreaMemberships_EditDetails", new { id = item.id }) |
            @Html.ActionLink("Delete", "AreaMemberships_Delete", new { id = item.id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.App_User_Profiles.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.App_Areas.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.App_Membership_Types.title)
        </td>
    </tr>
}

</table>
